/dts-v1/;

/ {
    compatible = "linux,dummy-virt";
    #address-cells = < 0x02 >;
    #size-cells = < 0x02 >;
    interrupt-parent = <&intc>;

    memory@10000000 {
        device_type = "memory";
        reg = <0x00 0x10000000 0x00 0x10000000>; /* 256MiB */
    };

    cpus {
        #address-cells = < 0x01 >;
        #size-cells = < 0x00 >;
        cpu@0 {
            compatible = "arm,cortex-a72";
            device_type = "cpu";
            reg = < 0x00 >;
        };
    };

    psci {
        compatible = "arm,psci-0.2";
        method = "hvc";
    };

    intc: gic400@40041000 {
        compatible = "arm,gic-400";
        interrupt-controller;
        #interrupt-cells = < 0x03 >;
        interrupts = < 0x01 0x09 0xf04 >;
        #address-cells = < 0x02 >;
        #size-cells = < 0x02 >;
        reg = < 0x00 0xff841000 0x00 0x1000 0x00 0xff842000 0x00 0x2000
                0x00 0xff844000 0x00 0x2000 0x00 0xff846000 0x00 0x2000 >;
    };

    timer {
        compatible = "arm,armv8-timer", "arm,armv7-timer";
        always-on;
        interrupts = < 0x01 0x0d 0x104 0x01 0x0e 0x104 0x01 0x0b 0x104 0x01 0x0a 0x104 >;
    };
    
    chosen {
        stdout-path = "hvc0";
        bootargs = "console=hvc0 root=/dev/ram0 nosmp maxcpus=1 rw debug loglevel=9 pci=nomsi initcall_debug";
        linux,stdout-path = "hvc0";
    };
};
